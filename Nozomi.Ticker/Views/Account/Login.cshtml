@model Nozomi.Base.Identity.Models.Areas.Account.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-xl-5 pb-5">
    <header class="mx-auto text-center pb-4">
        <h2 class="h1 font-weight-light mb-1">@ViewData["Title"]</h2>
    </header>
    <div class="row">
    <div class="u-box-shadow-lg card w-50 mx-auto">
        <!-- Card Body -->
        <div class="card-body">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" class="form-control" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password"></label>
                        <input asp-for="@Model.Password" class="form-control" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="@Model.RememberLogin">
                                <input asp-for="@Model.RememberLogin" />
                                @Html.DisplayNameFor(m => m.RememberLogin)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
            </div>
    </div>
