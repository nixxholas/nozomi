@using Microsoft.AspNetCore.Identity
@using Nozomi.Base.Identity.Models.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" class="py-2 d-none d-md-inline-block" asp-controller="Manage" asp-action="Index" 
       title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <form id="logoutForm" class="form-inline" asp-controller="Manage" asp-action="Index" 
          asp-route-returnUrl="@Url.Action("Index", "Home")">
        <button id="logout" type="submit" class="py-2 d-none d-md-inline-block">Logout</button>
    </form>
}
else
{
    <a class="py-2 d-none d-md-inline-block" id="register" asp-controller="Account" asp-action="Register">Sign Up</a>
}