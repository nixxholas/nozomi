FROM microsoft/dotnet:2.2-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80
ENV ASPNETCORE_URLS=http://+:80
ENV ASPNETCORE_ENVIRONMENT Production

FROM microsoft/dotnet:2.2-sdk AS build
WORKDIR /src
COPY . .
RUN apk add --update nodejs nodejs-npm yarn
RUN dotnet restore Nozomi.Web/Nozomi.Web.csproj
WORKDIR "/src/Nozomi.Web"
RUN dotnet build "Nozomi.Web.csproj" -c Release -o /app

FROM build AS publish
WORKDIR "/src/Nozomi.Web"
RUN apk add --update nodejs nodejs-npm yarn
RUN dotnet publish "Nozomi.Web.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Nozomi.Web.dll", "--server.urls", "http://0.0.0.0:80"]
